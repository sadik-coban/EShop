@model ChangePasswordViewModel
@{
    Layout = "_AccountLayout";
}

<form method="post" class="h-100">
    <div class="h-100 d-flex flex-column justify-content-center align-items-center">
        <div class="card shadow-sm" style="min-width: 24rem;">
            <div class="card-body">
                <div class="d-flex flex-column gap-3 justify-content-center align-items-center">
                    <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                    <h3>Parola Değiştirme</h3>
                </div>

                <div class="mb-3">
                    <label asp-for="CurrentPassword"></label>
                    <input asp-for="CurrentPassword" class="form-control" />
                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPassword"></label>
                    <input asp-for="NewPassword" class="form-control" />
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="NewPasswordCheck"></label>
                    <input asp-for="NewPasswordCheck" class="form-control" />
                    <span asp-validation-for="NewPasswordCheck" class="text-danger"></span>
                </div>

                @if (!ViewContext.ModelState.IsValid)
                {
                    <div class="alert alert-danger error-box" asp-validation-summary="All"></div>
                }
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary ms-auto">
                        <i class="bi bi-save"></i> Kaydet
                    </button>
                </div>

            </div>

        </div>
        <div class="small py-3">
            @DateTime.Today.Year &copy; - Tüm hakları saklıdır. - Powered By QuasarShop&trade;
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}