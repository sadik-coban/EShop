@model LoginViewModel
@{
    Layout = "_AccountLayout";
}

<form method="post" class="h-100">
    <div class="h-100 d-flex flex-column justify-content-center align-items-center">
        <div class="card shadow-sm" style="min-width: 24rem;">
            <div class="card-body">
                <div class="d-flex flex-column gap-3 justify-content-center align-items-center">
                    <i class="bi bi-person-circle" style="font-size: 5rem;"></i>
                    <h3>Kullanıcı Girişi</h3>
                </div>

                <div class="mb-3">
                    <label asp-for="UserName"></label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" asp-for="RememberMe">
                    <label class="form-check-label" for="RememberMe">Oturum açık kalsın</label>
                </div>
                <hr />
                <div class="py-3 d-flex gap-3 justify-content-center">
                    <a asp-action="Register">Yeni Üyelik</a>
                    <a asp-action="ResetPassword">Parolamı Yenile</a>
                </div>
                @if (!ViewContext.ModelState.IsValid)
                {
                    <div class="alert alert-danger error-box" asp-validation-summary="All"></div>
                }
                <div class="d-flex">
                    <button type="submit" class="btn btn-primary ms-auto">
                        <i class="bi bi-save"></i> Giriş
                    </button>
                </div>

            </div>

        </div>
        <div class="small py-3">
            @DateTime.Today.Year &copy; - Tüm hakları saklıdır. - Powered By QuasarShop&trade;
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}